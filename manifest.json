{
  "manifest_version": 2,
  "name": "Pashto Phonetic Keyboard",
  "version": "1.0",
  "description": "Pashto Phonetic Keyboard Chrome Extension",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon.png"
  },
  "browser_action": {
    "default_icon": "images/icon16.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": [ "content.js"],
      "type": "module"
    }
  ],
  "permissions": ["activeTab"]
}
